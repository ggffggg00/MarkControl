<UserControl x:Class="WpfApp2.UI.Components.DataExplorerFragment"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp2.UI.Components"
             mc:Ignorable="d" 
             d:DesignHeight="538" d:DesignWidth="871">
    <Grid>
        <DataGrid 
            x:Name="dtGrid"  
            Margin="10,10,10,10" 
            Height="320"
            VerticalAlignment="Top" 
            HorizontalAlignment="Stretch"
            HorizontalContentAlignment="Stretch" 
            ColumnWidth="*"  
            FontSize="13"
            FontFamily="Gotham Pro Light"
            ItemsSource="{Binding}" 
            Background="{x:Null}"/>
        <Grid Margin="10,335,10,10">
            <Button Content="Добавить серию значений" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" Width="162" Click="Button_Click"/>
        </Grid>


    </Grid>
</UserControl>
