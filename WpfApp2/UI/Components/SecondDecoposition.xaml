<UserControl x:Class="WpfApp2.UI.Components.SecondDecoposition"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp2.UI.Components"
             mc:Ignorable="d" 
             Margin="-3,0,0,0"
             d:DesignHeight="538" d:DesignWidth="871" Background="#22252a">




    
    <Grid>
        <ComboBox x:Name="cmbb" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBox_SelectionChanged"  BorderBrush="{x:Null}">

            <ComboBox.ItemContainerStyle>
                <Style TargetType="ComboBoxItem">
                    <Setter Property="Background" Value="#41416a"/>
                    <Setter Property="BorderBrush" Value="#41416a"/>
                    <Setter Property="Foreground" Value="White"/>
                </Style>
            </ComboBox.ItemContainerStyle>
        </ComboBox>
        <ContentControl x:Name="cc" Content="" Margin="3,37,0,0"/>

    </Grid>
</UserControl>
