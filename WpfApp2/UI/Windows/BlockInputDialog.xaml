<Window x:Class="WpfApp2.UI.Windows.BlockInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2.UI.Windows"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Ввод марок для блока" 
        Background="#FF2F343F"
        ShowInTaskbar="False" Height="153" Width="304" ResizeMode="NoResize">




    <StackPanel>
        <TextBlock x:Name="label" Margin="10,5,10,0" FontSize="14" Foreground="#FFCDCFDE" Text="Hello!" FontFamily="Gotham Pro Light" TextAlignment="Center" />
        <TextBox x:Name="ResponseTextBox" FontSize="14" Background="#FF1B1E25" Margin="10,5,10,10"  Foreground="#FFD6D8E6" SelectionBrush="White" SelectionTextBrush="#FF322F40" BorderBrush="{x:Null}" Height="29"  />
        <Button Content="OK" Click="Button_Click" Margin="10,0,10,5"  Foreground="#FFD6D8E6" Background="#FF1B1E25" />
        <Button Content="Отмена"  Margin="10,0,10,5"  Foreground="#FFD6D8E6" Background="#FF1B1E25" Click="Button_Click_1" />
    </StackPanel>
</Window>
